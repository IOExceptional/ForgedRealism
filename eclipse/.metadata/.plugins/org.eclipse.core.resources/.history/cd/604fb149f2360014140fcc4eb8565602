package com.gmail.leewalkergm.realism;

import net.minecraft.item.Item;

import com.gmail.leewalkergm.realism.items.ObsidianStick;
import com.gmail.leewalkergm.realism.lib.ProxyCommon;
import com.gmail.leewalkergm.realism.lib.References;

import cpw.mods.fml.common.Mod;
import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.SidedProxy;
import cpw.mods.fml.common.event.FMLInitializationEvent;
import cpw.mods.fml.common.registry.GameRegistry;
import cpw.mods.fml.common.registry.LanguageRegistry;

@Mod(modid = References.MODID, version = References.VERSION)
public class RealismMod
{
	@SidedProxy(clientSide = References.Client, serverSide = References.Common)
	
	public static ProxyCommon Proxy;
	
	//Items
	public static Item obsidianStick = new ObsidianStick(4999); 
	
    @EventHandler
    public void init(FMLInitializationEvent event)
    {
    	Proxy.regiserRenderInformation();	
    }
    
    public RealismMod()
    {
    	//Item Registration
    	GameRegistry.registerItem(obsidianStick, "ObsidianStick");
    	LanguageRegistry.addName(obsidianStick, "ObsidianStick");
    }
}
